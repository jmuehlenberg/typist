# Disable directory listing
Options -Indexes

# Block backup/system files
<FilesMatch "\.(org|bak|save|swp|tmp|DS_Store)$">
  Require all denied
</FilesMatch>
RedirectMatch 404 ^/.*/__MACOSX/.*$

<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "DENY"
  Header set Referrer-Policy "no-referrer"
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; object-src 'none'; base-uri 'self'; frame-ancestors 'none'; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
</IfModule>
